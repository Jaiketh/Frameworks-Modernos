<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Brazil Country Info</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            max-width: 800px;
            margin: 20px auto;
            padding: 0 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
        }
        th {
            background-color: #4CAF50;
            color: white;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Brazil Country Information</h1>
    <div id="countryInfo"></div>

    <script>
        function formatPopulation(population) {
            return population.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
        }

        async function getBrazilInfo() {
            try {
                const response = await fetch('https://restcountries.com/v3.1/name/brazil');
                const data = await response.json();
                const country = data[0];

                const currencies = Object.entries(country.currencies)
                    .map(([code, info]) => `${code} (${info.name})`)
                    .join(', ');

                const html = `
                    <table>
                        <tr>
                            <th>Information</th>
                            <th>Details</th>
                        </tr>
                        <tr>
                            <td>Official Name</td>
                            <td>${country.name.official}</td>
                        </tr>
                        <tr>
                            <td>Capital</td>
                            <td>${country.capital[0]}</td>
                        </tr>
                        <tr>
                            <td>Population</td>
                            <td>${formatPopulation(country.population)}</td>
                        </tr>
                        <tr>
                            <td>Region</td>
                            <td>${country.region}</td>
                        </tr>
                        <tr>
                            <td>Currencies</td>
                            <td>${currencies}</td>
                        </tr>
                    </table>
                `;

                document.getElementById('countryInfo').innerHTML = html;
            } catch (error) {
                console.error('Error fetching data:', error);
                document.getElementById('countryInfo').innerHTML = 'Error loading country data';
            }
        }

        // Load data when page loads
        getBrazilInfo();
    </script>
</body>
</html>